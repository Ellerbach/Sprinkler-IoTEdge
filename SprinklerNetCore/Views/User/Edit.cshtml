@model SprinklerNetCore.Models.UserRoles
@using  SprinklerNetCore.Resources

<h4>@ViewData["Title"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <label asp-for="Email" class="form-control">@Model.Email</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Roles" class="control-label"></label>
                <select asp-for="Roles" class="form-control" asp-items="@ViewBag.Roles"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="@ViewData["Save"]" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@ViewData["IndexBackToList"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model SprinklerNetCore.Models.Sprinkler
@using  SprinklerNetCore.Resources

<h4>@ViewData["Title"]</h4>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Number)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Number)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsInverted)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsInverted)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Open)
        </dt>
        <dd class="col-sm-10">
            @Html.ActionLink(Model.Open ? ViewData["IsOpen"].ToString() : ViewData["IsClosed"].ToString(), "Open", new { id = Model.Number, state = !Model.Open, page = "Details" })
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink(Text.Edit, "Edit", new { id = Model.Number }) |
    @Html.ActionLink(Text.EditTypical, "EditTypical", new { id = Model.Number }) |
    <a asp-action="Index">@Text.IndexBackToList</a>
</div>
